
public class TestNumber2 {

	public static void main(String[] args) {
		int k=1;
		int k2=1;
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=4;j++)
			{
				if(j<=i)
				{
					if(i%2!=0)
					{
						
						System.out.print(k++);
						k2=k+1;
					}
					else
					{
						k++;
						System.out.print(k2--);
					}
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
}
