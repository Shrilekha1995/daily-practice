
public class TestNumber {

public static void main(String[] args) {
		int k=0,k2=0;
		int count=0;
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=4;j++)
			{
				if(j<=i)
				{
					if(i%2!=0)
					{
						
						System.out.print(k++);
					}
					else
					{
						
						System.out.print(k--);
					}
					
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

