
public class AlternateRowPattern {

	public static void main(String[] args) {
		int k=1;
		
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=4;j++)
			{
				if(j<=i)
				{
					
					if(i%2!=0)
					{
						System.out.print(k++);
					}
						i=i+1;
						System.out.println(k++);
						i--;
					}
					
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
}
